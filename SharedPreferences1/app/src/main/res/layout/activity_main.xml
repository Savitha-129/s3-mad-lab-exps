<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvlevel"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:gravity="left"
        android:text="level:"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvlevelval"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:gravity="left"
        android:text="10"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/tvlevel" />
    <TextView
        android:id="@+id/tvscore"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:gravity="left"
        android:text="Score:"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/tvlevelval"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvscoreval"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:textSize="30sp"
        android:text="100"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        app:layout_constraintLeft_toRightOf="@+id/tvscore"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvnum1"
        android:layout_width="409dp"
        android:layout_height="94dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:background="@color/material_dynamic_primary50"
        android:backgroundTint="@color/teal_200"
        android:text="10"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvscore"
        />
    
    <TextView
        android:id="@+id/tvoperator"
        android:layout_width="415dp"
        android:layout_height="55dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text=""
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@+id/tvnum1"
        app:layout_editor_absoluteX="4dp"
        tools:text="+"/>
    <TextView
        android:id="@+id/tvnum2"
        android:layout_width="407dp"
        android:layout_height="94dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:background="#3CB566"
        android:text="15"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvoperator" />

    <TextView
        android:id="@+id/tvequal"
        android:layout_width="415dp"
        android:layout_height="55dp"
        android:background="#D7E022"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="="
        android:textColor="#18C51F"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@+id/tvnum2"
        tools:layout_editor_absoluteX="4dp"
        tools:text="=" />

    <EditText
        android:id="@+id/tvsum"
        android:layout_width="411dp"
        android:layout_height="106dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E91E63"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textColor="#129617"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvequal" />

    <TextView
        android:id="@+id/tvstatus"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="563dp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/tvsum" />

    <Button
        android:id="@+id/buttonNextLevel"
        android:layout_width="391dp"
        android:layout_height="94dp"
        android:text="NEXT LEVEL"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="652dp"
        app:layout_constraintTop_toBottomOf="@+id/tvstatus" />

</androidx.constraintlayout.widget.ConstraintLayout>